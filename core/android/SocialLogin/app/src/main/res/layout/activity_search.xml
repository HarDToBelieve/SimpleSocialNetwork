<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:layout_alignParentBottom="true">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:background="#5ed3f9"/>

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottomNavView_Bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            app:menu="@menu/bottom_nav_menu">


        </android.support.design.widget.BottomNavigationView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:background="#ffffff"
        >

        <TextView
            android:id="@+id/searchText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:text="SEARCH"
            android:textColor="#5ed3f9"
            android:textSize="18dp"
            />

        <View
            android:id="@+id/chatLine"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="60dp"
            android:background="#5ed3f9"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/topBar"
        android:id="@+id/searchArea"
        >
        <EditText
            android:id="@+id/nameSearch"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:textSize="20dp"
            android:hint="Enter name here"
            />

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_toEndOf="@+id/nameSearch"
            android:text="Search"
            android:background="#5ed3f9"
            android:layout_marginTop="15dp"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:id="@+id/buttonSearch"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/userprofileInfo"
        android:layout_below="@+id/searchArea"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/avatar"
            android:src="@drawable/add"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Hoang Anh"
            android:textSize="18dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/avatar"
            />

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@+id/username"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:text="Following"
            android:textSize="18dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:background="#5ed3f9"
            android:id="@+id/followingButton"
            />

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="15"
            android:textSize="18dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:background="#5ed3f9"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/username"
            android:layout_toEndOf="@+id/followingButton"
            android:id="@+id/followingNumber"
            />

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@+id/username"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:text="Follower"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_toEndOf="@+id/followingNumber"
            android:textColor="#ffffff"
            android:background="#5ed3f9"
            android:id="@+id/followerButton"
            />

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="25"
            android:textSize="18dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:background="#5ed3f9"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/username"
            android:layout_toEndOf="@+id/followerButton"
            android:id="@+id/followerNumber"
            />


    </RelativeLayout>

</RelativeLayout>